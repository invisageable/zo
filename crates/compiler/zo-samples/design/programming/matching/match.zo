-- matches: match.

fun matches(n: int): str {
  -- first idea.
  if n == {
    1 => "one",
    2 => "two",
    else => showln("{n}"), -- `n` is added implicitly to the scope.
  }

  -- second idea.
  match n {
    1 => "one",
    2 => "two",
    else => showln("{n}"), -- `n` is added implicitly to the scope.
  }
}

fun main() {
  showln("{}", matches(1));
}
